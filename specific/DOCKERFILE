ARG baseimage
ARG navdvdurl=""
ARG vsixurl=""
ARG isbcsandbox="N"

FROM $baseimage

ENV DatabaseServer=localhost DatabaseInstance=SQLEXPRESS DatabaseName=CRONUS IsBcSandbox=$isbcsandbox

COPY ./buildimage.ps1 /buildimage.ps1

RUN powershell.exe -Command $ErrorActionPreference = 'Stop' ; \
    $ProgressPreference = 'SilentlyContinue' ; \
    c:\buildimage.ps1 -NAVDVDURL %navdvdurl% -VSIXURL %vsixurl
